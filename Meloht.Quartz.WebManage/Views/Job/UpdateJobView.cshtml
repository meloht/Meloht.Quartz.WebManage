@model UpdateJobModel

<div class="form-horizontal">
    @Html.AntiForgeryToken()

    @Html.HiddenFor(p => p.JobGroupValue)

    <div class="form-group">
        <label asp-for="JobName" class="control-label col-md-2"></label>
        <div class="col-md-8">
            <input asp-for="JobName" class="form-control" readonly="readonly" />
            <span asp-validation-for="JobName" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group">
        <label asp-for="CronExpression" class="control-label col-md-2"></label>
        <div class="col-md-8">
            <input asp-for="CronExpression" class="form-control" />
            <span asp-validation-for="CronExpression" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CallbackUrl" class="control-label col-md-2"></label>
        <div class="col-md-8">
            <input asp-for="CallbackUrl" class="form-control" />
            <span asp-validation-for="CallbackUrl" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="tb_param">任务参数</label>
        <input type="hidden" id="CallbackParams" name="CallbackParams" value="" />
        <div class="col-md-8">
            <div id="toolbarpara">
                <div class="form-inline" role="form">
                    <button id="btn_para_add" type="button" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>添加参数
                    </button>
                </div>
            </div>
            <table id="tb_param" class="table table-condensed"></table>

        </div>

    </div>
</div>
